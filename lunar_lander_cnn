import gymnasium as gym
import torch
import torch.nn as nn
import torch.nn.functional as F
import torch.optim as optim
import numpy as np
import random
from collections import deque, namedtuple
import matplotlib.pyplot as plt

# --- Hyperparameters ---
BATCH_SIZE = 128
GAMMA = 0.99
EPS_START = 0.9
EPS_END = 0.05
EPS_DECAY = 1000 
TAU = 0.005      
LR = 1e-4
MEMORY_SIZE = 5000 # Lowered slightly for image memory safety

Transition = namedtuple('Transition', ('state', 'action', 'next_state', 'reward', 'done'))

# --- 1. The CNN Model ---
class CNNDQN(nn.Module):
    def __init__(self, n_actions):
        super(CNNDQN, self).__init__()
        self.conv1 = nn.Conv2d(3, 16, kernel_size=8, stride=4) 
        self.conv2 = nn.Conv2d(16, 32, kernel_size=4, stride=2) 
        self.conv3 = nn.Conv2d(32, 32, kernel_size=3, stride=1) 
        self.fc1 = nn.Linear(32 * 8 * 8, 256)
        self.fc2 = nn.Linear(256, n_actions)

    def forward(self, x):
        x = x.permute(0, 3, 1, 2) # (B, H, W, C) -> (B, C, H, W)
        x = F.relu(self.conv1(x))
        x = F.relu(self.conv2(x))
        x = F.relu(self.conv3(x))
        x = x.reshape(x.size(0), -1) 
        x = F.relu(self.fc1(x))
        return self.fc2(x)

# --- 2. Supporting Classes & Functions ---
class ReplayMemory:
    def __init__(self, capacity):
        self.memory = deque([], maxlen=capacity)
    def push(self, *args):
        self.memory.append(Transition(*args))
    def sample(self, batch_size):
        return random.sample(self.memory, batch_size)
    def __len__(self):
        return len(self.memory)

def select_action(state, steps_done):
    sample = random.random()
    eps_threshold = EPS_END + (EPS_START - EPS_END) * np.exp(-1. * steps_done / EPS_DECAY)
    if sample > eps_threshold:
        with torch.no_grad():
            return policy_net(state).max(1)[1].view(1, 1)
    else:
        return torch.tensor([[env.action_space.sample()]], device=device, dtype=torch.long)

def optimize_model():
    if len(memory) < BATCH_SIZE:
        return
    transitions = memory.sample(BATCH_SIZE)
    batch = Transition(*zip(*transitions))
    
    state_batch = torch.cat(batch.state)
    action_batch = torch.cat(batch.action)
    reward_batch = torch.cat(batch.reward)
    next_state_batch = torch.cat(batch.next_state)
    done_batch = torch.cat(batch.done)

    state_action_values = policy_net(state_batch).gather(1, action_batch)
    with torch.no_grad():
        next_state_values = target_net(next_state_batch).max(1)[0]
    expected_state_action_values = (next_state_values * GAMMA * (1 - done_batch)) + reward_batch

    loss = F.smooth_l1_loss(state_action_values, expected_state_action_values.unsqueeze(1))
    optimizer.zero_grad()
    loss.backward()
    optimizer.step()

# --- 3. Setup ---
env = gym.make("CarRacing-v3", continuous=False)
n_actions = env.action_space.n
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")

policy_net = CNNDQN(n_actions).to(device)
target_net = CNNDQN(n_actions).to(device)
target_net.load_state_dict(policy_net.state_dict())
optimizer = optim.AdamW(policy_net.parameters(), lr=LR, amsgrad=True)
memory = ReplayMemory(MEMORY_SIZE)

# --- 4. Training Loop ---
num_episodes = 100 # Keep it low for a test run, increase later
reward_history = []
total_steps = 0

print(f"Training on {device}...")

try:
    for i_episode in range(num_episodes):
        state, _ = env.reset()
        state_t = torch.tensor(state, dtype=torch.float32, device=device).unsqueeze(0) / 255.0
        total_reward = 0
        
        for t in range(1000):
            action = select_action(state_t, total_steps)
            total_steps += 1
            
            observation, reward, terminated, truncated, _ = env.step(action.item())
            done = terminated or truncated
            total_reward += reward
            
            next_state_t = torch.tensor(observation, dtype=torch.float32, device=device).unsqueeze(0) / 255.0
            reward_t = torch.tensor([reward], device=device)
            done_t = torch.tensor([float(done)], device=device)

            memory.push(state_t, action, next_state_t, reward_t, done_t)
            state_t = next_state_t
            optimize_model()

            # Soft Update
            target_net_state_dict = target_net.state_dict()
            policy_net_state_dict = policy_net.state_dict()
            for key in policy_net_state_dict:
                target_net_state_dict[key] = policy_net_state_dict[key]*TAU + target_net_state_dict[key]*(1-TAU)
            target_net.load_state_dict(target_net_state_dict)

            if done: break
                
        reward_history.append(total_reward)
        if i_episode % 10 == 0:
            print(f"Episode {i_episode} | Reward: {total_reward:.2f}")

except KeyboardInterrupt:
    print("Training interrupted. Showing plot...")

# --- 5. Final Plotting ---
plt.figure(figsize=(10, 5))
plt.plot(reward_history, label='Raw Reward', alpha=0.3)
if len(reward_history) >= 10:
    sma = np.convolve(reward_history, np.ones(10)/10, mode='valid')
    plt.plot(range(9, len(reward_history)), sma, label='10-Ep Moving Avg', color='red')
plt.title("Car Racing (CNN-DQN) Progress")
plt.xlabel("Episode")
plt.ylabel("Reward")
plt.legend()
plt.savefig("car_racing_results.png") # This saves it even if the window fails
plt.show()

# Save and Visualize
torch.save(policy_net.state_dict(), "car_racing_dqn.pth")





# --- Training Parameters ---
num_episodes = 300 
reward_history = []
memory = ReplayMemory(MEMORY_SIZE) # Ensure memory is initialized
optimizer = optim.AdamW(policy_net.parameters(), lr=LR, amsgrad=True)

print(f"Training on {device}...")

for i_episode in range(num_episodes):
    state, _ = env.reset()
    state_t = torch.tensor(state, dtype=torch.float32, device=device).unsqueeze(0) / 255.0
    total_reward = 0
    
    for t in range(1000):
        # Action selection
        action = select_action(state_t) # Ensure this function is defined in your script
        
        observation, reward, terminated, truncated, _ = env.step(action.item())
        done = terminated or truncated
        total_reward += reward
        
        next_state_t = torch.tensor(observation, dtype=torch.float32, device=device).unsqueeze(0) / 255.0
        reward_t = torch.tensor([reward], device=device)
        done_t = torch.tensor([float(done)], device=device)

        # Store transition
        memory.push(state_t, action, next_state_t, reward_t, done_t)
        state_t = next_state_t
        
        # Optimize
        optimize_model() # Ensure this function is defined to use policy_net/target_net

        # Soft update
        target_net_state_dict = target_net.state_dict()
        policy_net_state_dict = policy_net.state_dict()
        for key in policy_net_state_dict:
            target_net_state_dict[key] = policy_net_state_dict[key]*TAU + target_net_state_dict[key]*(1-TAU)
        target_net.load_state_dict(target_net_state_dict)

        if done:
            break
            
    reward_history.append(total_reward)
    if i_episode % 10 == 0:
        print(f"Episode {i_episode} | Reward: {total_reward:.2f}")

# --- Plotting ---
plt.figure(figsize=(10, 5))
plt.plot(reward_history, label='Raw Reward', alpha=0.3)
if len(reward_history) >= 10:
    sma = np.convolve(reward_history, np.ones(10)/10, mode='valid')
    plt.plot(range(9, len(reward_history)), sma, label='10-Ep Moving Avg', color='red')
plt.title("Car Racing Training Progress")
plt.xlabel("Episode")
plt.ylabel("Total Reward")
plt.legend()
plt.savefig("car_racing_plot.png") # Saves the plot to your folder
plt.show()

# Save the model weights
torch.save(policy_net.state_dict(), "car_racing_dqn.pth")
print("Model saved to car_racing_dqn.pth")


def visualize_agent(model_path, num_episodes=5):
    # Re-make environment with human rendering
    env = gym.make("CarRacing-v2", continuous=False, render_mode="human")
    
    # Load the trained model
    model = CNNDQN(env.action_space.n).to(device)
    model.load_state_dict(torch.load(model_path))
    model.eval() # Set to evaluation mode (turns off dropout/batchnorm)

    for episode in range(num_episodes):
        obs, _ = env.reset()
        done = False
        total_reward = 0
        
        while not done:
            # Process the image for the CNN
            state_t = torch.tensor(obs / 255.0, dtype=torch.float32, device=device).unsqueeze(0)
            
            with torch.no_grad():
                action = model(state_t).argmax(1).item() # .item() fixes the discrete bug
            
            obs, reward, terminated, truncated, _ = env.step(action)
            total_reward += reward
            done = terminated or truncated
            
        print(f"Visualization Episode {episode} Reward: {total_reward}")
    
    env.close()

# Call the visualization
visualize_agent("car_racing_dqn.pth")